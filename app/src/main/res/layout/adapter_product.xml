<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:paddingEnd="10dp"
        android:minHeight="50dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Florence Hobo "
            android:id="@+id/tvProductName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SKU #: 31662Price"
            android:layout_marginTop="20dp"
            android:id="@+id/tvDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Will Leather Goods celebrates worldwide artisans â€“ a pillar of our"
            android:layout_marginTop="20dp"
            android:id="@+id/tvRate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvDelivery"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/linearLayout1"
        android:layout_toEndOf="@+id/linearLayout1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/t54"
            android:id="@+id/tvProductImage" />
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/wishlist"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2">
        <TextView
            android:id="@+id/tvAvailSize"
            android:text="Quantity"
            android:layout_margin="15dp"
            android:layout_weight="6.40"
            android:layout_width="50dp"
            android:layout_height="30dp" />
        <Spinner
            android:layout_margin="15dp"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:id="@+id/spinner"
            android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/wishlist"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/linearLayout2"
        android:layout_toStartOf="@+id/linearLayout2"
        android:background="@android:drawable/editbox_background_normal"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/remove"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/linearLayout1"
        android:layout_toEndOf="@+id/linearLayout1"
        android:singleLine="true"
        android:background="@android:drawable/editbox_background_normal"/>


</RelativeLayout>
